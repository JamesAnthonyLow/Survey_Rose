<div id="page" class="container">
  <form class ="smart-green" action="/posts" method="POST">
    <h1>New Post</h1>
      <ul>
        <li>
        <label>Title:</label>
        <input id="post_title" type="text" name="post[title]" value="<%= @post.title %>" />
      </li>
      <li>
        <label>Body:</label>
        <textarea row=5 col=40 id="post_body" type="text" name="post[body]" value="<%= @post.body %>"></textarea>
      </li>
    </ul>
    <input type="submit" value="Create Post" />
  </form>
  <a href="/users/<%=@user.id%>" >Go Back to your profile </a>
</div>
