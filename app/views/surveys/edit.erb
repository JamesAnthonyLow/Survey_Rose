<!-- show survey with all questions iterated in partials -->
<div class="smart-green">
  <h1><%= @survey.name %></h1>
    <% @survey.questions.each_with_index do |question, index| %>
      <%= erb :"questions/edit", locals: {question: question, count: (index + 1)} %>
    <% end %>
  <form action="/surveys/<%= @survey.id %>" method="POST">
    <input type="submit" value="Submit" />
  </form>
  <a href="/surveys/<%= @survey.id %>/questions/new">Add New Question</a>
</div>
