<div class="smart-green">
<h1> <%= @survey.name %></h1>
  <ol>
    <% @survey.questions.each do |question| %>
      <%= erb :"questions/info", locals: {question: question} %>
    <% end %>
  </ol>
  <% if @can_edit == true %>
    <a href="/surveys/<%= @survey.id %>/edit">Edit Survey</a>
  <% end %>
</div>
